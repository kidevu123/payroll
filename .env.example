# Flask Application Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Flask Secret Key (REQUIRED for production)
# Generate with: python3 -c "import os; print(os.urandom(24).hex())"
FLASK_SECRET_KEY=your-secret-key-here-change-me

# Zoho Books Configuration - Haute Brands
# Get these from Zoho Books API Console
ZB_HB_ORG_ID=your-org-id
ZB_HB_CLIENT_ID=your-client-id
ZB_HB_CLIENT_SECRET=your-client-secret
ZB_HB_REFRESH_TOKEN=your-refresh-token
ZB_HB_EXPENSE_ACCOUNT_ID=your-expense-account-id
ZB_HB_EXPENSE_ACCOUNT_NAME=Payroll Expenses
ZB_HB_PAID_THROUGH_ID=your-bank-account-id
ZB_HB_PAID_THROUGH_NAME=Operating Account
ZB_HB_VENDOR_ID=your-vendor-id

# Zoho Books Configuration - Boomin Brands
ZB_BB_ORG_ID=your-org-id
ZB_BB_CLIENT_ID=your-client-id
ZB_BB_CLIENT_SECRET=your-client-secret
ZB_BB_REFRESH_TOKEN=your-refresh-token
ZB_BB_EXPENSE_ACCOUNT_ID=your-expense-account-id
ZB_BB_EXPENSE_ACCOUNT_NAME=Payroll Expenses
ZB_BB_PAID_THROUGH_ID=your-bank-account-id
ZB_BB_PAID_THROUGH_NAME=Operating Account
ZB_BB_VENDOR_ID=your-vendor-id

# Zoho API Domains (default values usually work)
ZB_DOMAIN=https://www.zohoapis.com
ZB_ACCOUNTS_DOMAIN=https://accounts.zoho.com

# Reports Configuration
REPORTS_LIST_LIMIT=24

# Optional: NGTeco Credentials (if using automated fetch)
NGTECO_USERNAME=your-username
NGTECO_PASSWORD=your-password

